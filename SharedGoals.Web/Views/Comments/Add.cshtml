@model CommentFormModel

@{
    ViewBag.Title = "Add a Goal Comment";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Comment Name...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body"></label>
                <input asp-for="Body" class="form-control" placeholder="Comment Text...">
                <span asp-validation-for="Body" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary" type="submit" value="Add" />
        </form>
    </div>
</div>