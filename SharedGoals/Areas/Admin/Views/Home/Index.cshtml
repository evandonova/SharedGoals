@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area- you can <b>read</b>, <b>create</b>, <b>delete</b> and <b>edit</b> goals.
        You can <b>work</b> on them, too!
    </p>
    <p class="lead mt-1">
        You can also see <b>all goal works</b> and <b>all users</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Goals" asp-action="All" class="btn btn-primary btn-lg">All Goals</a>
    <a asp-area="" asp-controller="Goals" asp-action="Create" class="btn btn-primary btn-lg">Create Goal</a>
    <span>  |   </span>
    <a asp-area="" asp-controller="GoalWorks" asp-action="Mine" class="btn btn-primary btn-lg">My Goal Works</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="GoalWorks" asp-action="All" class="btn btn-primary btn-lg">All Goal Works</a>
    <a asp-area="Admin" asp-controller="Users" asp-action="All" class="btn btn-primary btn-lg">All Users</a>
</div>
