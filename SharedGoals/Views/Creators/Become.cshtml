@model BecomeCreatorFormModel

@{
    ViewBag.Title = "Become Creator";
}

<h2 class="heading-margin text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Your creative name here...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="alert alert-warning" role="alert">
                Note that Creators can only create goals and cannot work on any!
            </div>
            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>
