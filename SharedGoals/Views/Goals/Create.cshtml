@model GoalFormModel

@{
    ViewBag.Title = "Create Goal";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Be More Positive...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" placeholder="My goal is to..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                <input asp-for="DueDate" class="form-control" placeholder="Due Date..." />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageURL"></label>
                <textarea asp-for="ImageURL" id="imageUrlInput" class="form-control" placeholder="Image URL..."></textarea>
                <span asp-validation-for="ImageURL" class="small text-danger"></span>
                <input class="btn btn-secondary float-right" type="button" id="defaultImageUrlBtn" value="Default image" />
            </div>
            <div class="form-group mt-3">
                <label asp-for="TagId"></label>
                <select asp-for="TagId" class="form-control">
                    @foreach (var tag in Model.Tags)
                    {
                        <option value="@tag.Id">@tag.Name</option>
                    }
                </select>
                <span asp-validation-for="TagId" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary" type="submit" value="Create" />
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/defaultImageScript.js"></script>
    <partial name="_ValidationScriptsPartial" />
}