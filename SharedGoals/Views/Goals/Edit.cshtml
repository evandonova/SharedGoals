@model CreateGoalFormModel

@{
    ViewBag.Title = "Edit Goal";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (Model != null)
{
    <form asp-action="Edit">
        <div class="row">
            <div class="col-md-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" placeholder="Description..." />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="DueDate" class="control-label"></label>
                    <input asp-for="DueDate" class="form-control" placeholder="Due Date..." />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="TagId"></label>
                    <select asp-for="TagId" class="form-control">
                        @foreach (var tag in Model.Tags)
                        {
                            <option value="@tag.Id">@tag.Name</option>
                        }
                    </select>
                    <span asp-validation-for="TagId" class="small text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                    &nbsp;&nbsp;&nbsp;
                    <a asp-action="All" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <h2 class="text-danger">Event not found.</h2>
    <a asp-action="All" class="btn btn-secondary">Back to List</a>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
